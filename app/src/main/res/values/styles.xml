<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="DuplicateDefinition">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="Titlecolor">@color/colorPrimaryDark</item>
        <item name="Overviewcolor">#808080</item>
        <item name="Backgroundcolor">#fff</item>
        <item name="toolbarcolor">#00acee</item>
        <item name="Bordercolor">@color/colorPrimaryDark</item>
    </style>



    <!-- Base application Nighttheme. -->
    <style name="NightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#fff</item>
        <item name="Titlecolor">#fff</item>
        <item name="Overviewcolor">#fff</item>
        <item name="Backgroundcolor">#000</item>
        <item name="toolbarcolor">#fff</item>
        <item name="Bordercolor">#fff</item>

    </style>

    <style name="counterOverride">counter</style>

    <style name="counterText">textcounter</style>
</resources>
